<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_primary" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_grey" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/background_color</item>
        <item name="backgroundTint">@color/background_color</item>
        <item name="background">@color/background_color</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_red" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/red</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="button_green" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">#2AC43F</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_accent" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="toolbar_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#E2E2E2</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="DialogTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
</resources>